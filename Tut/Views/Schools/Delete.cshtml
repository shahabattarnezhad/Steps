@model School

<div class="row">
    <div>
        <h1>Delete Page</h1>
    </div>
</div>

<div>
    <h3 class="text-danger">
        Are you sure to delete the <span class="fw-bold text-decoration-underline">@Model.Name</span>
    </h3>
</div>

<form asp-controller="Schools" asp-action="ConfirmationDelete" method="post">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a asp-controller="Schools"
           asp-action="Index"
           class="btn btn-secondary">Back to School List</a>
    </div>
</form>