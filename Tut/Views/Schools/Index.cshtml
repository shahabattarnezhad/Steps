@model List<School>

<div class="row">
    <div class="">
        <h3>Schools List</h3>
    </div>
    <div class="text-end">
        <a 
            class="btn btn-primary"
           asp-controller="Schools"
           asp-action="Create"
        >Create New School</a>
    </div>
</div>

<div>
    <table class="table table-hover table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (School item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Capacity</td>
                        <td>@item.Address</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <p class="text-center fw-bold">No data</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>